blueprint:
  name: Tibber , max price Turn on SmartThingDevice
  description: 'This automation blueprint turns on smarthing climate device when energy price is lower than certain procent.'
  domain: automation
  input:
    energy_sensor:
      name: Tibber price sensor
      selector:
        entity:
          integration: tibber
          domain: sensor
      default: ''
    climate_entity:
      name: Device to Turn On
      selector:
          entity:
            domain: climate
    temperature_sensor:
      name: Device to Monitor temperature
      selector:
          entity:
            domain: sensor
     temperature_number:
        name: Temperature Number
        selector:
           number:
             min: -15
             max: 35
             step:1
             unit_of_measurment: sec
             mode: slider
mode: single
max_exceeded: silent
variables:
  energy_sensor: !input 'energy_sensor'
  energy_sensor_state: '{{ float(states[energy_sensor].state)}}'
  energy_sensor_avg: '{{ float(states[energy_sensor].attributes[''avg_price''])}}'
  temperature_sensor: !input 'temperature_sensor'
  temperature_sensor_temperature: '{{ float(states[temperature_sensor].state)}}'
  
trigger:
  platform: state
  entity_id: !input 'energy_sensor'
condition:
  condition: template
  value_template: '{{energy_sensor_state < energy_sensor_avg}}'
action:
  - service: climate.turn_on
    target: 
      entity_id: !input climate_entity
